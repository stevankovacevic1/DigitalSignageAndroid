<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="group" type="com.consulteer.digital_signage.data.db.entities.Group"/>
    </data>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/item_group">


        <ImageView
                android:layout_width="38dp"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_calendaricon"
                android:id="@+id/vectorCalendar"/>
        <RelativeLayout
                android:layout_margin="15dp"
                android:id="@+id/rellay"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">
            <TextView
                    android:layout_width="347dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:id="@+id/group"
                    android:text="@{event.StartingDate+ +event.event}"
                    tools:text="Group party for friday night"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_thin"/>
            <TextView
                    android:text="30"
                    android:textSize="10sp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateNumber"
                    android:hint="30"
                    android:layout_marginEnd="375dp"
                    android:fontFamily="@font/roboto_thin"
                    android:layout_marginBottom="20dp"
                    android:layout_alignBottom="@+id/event"
                    android:layout_alignEnd="@+id/event"
                    android:textStyle="bold"></TextView>
       <View style="@style/Divider.Horizontal"></View>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

