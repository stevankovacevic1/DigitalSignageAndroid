<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:menu="@menu/feed_menu"
android:accessibilityPaneTitle="">

    <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/calendarVac"
            android:layout_width="411dp"
            android:layout_height="628dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:cacheColorHint="#00724747"
    ></com.squareup.timessquare.CalendarPickerView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="405dp"
            android:layout_height="101dp" android:id="@+id/upperlayoutvacreq"

            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/calendarVac" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintVertical_bias="0.333">
        <Button
                android:text="request leave"
                android:layout_width="179dp"
                android:background="@drawable/circular_button" android:shadowColor="#C4C4C4C4"
                android:layout_height="51dp"
                android:id="@+id/reqleavebtn"
                android:fontFamily="@font/roboto_thin"
                android:layout_gravity="right|center_horizontal"/>
        <TextView
                android:text="Remaning days:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/remdays"
                android:fontFamily="@font/roboto_thin"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/countdays" android:text="Selected days:"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>