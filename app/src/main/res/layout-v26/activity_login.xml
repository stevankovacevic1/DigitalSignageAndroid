<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/login">
    <data>
        <variable name="viewmodel" type="com.consulteer.digital_signage.view.ui.auth.AuthViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.consulteer.digital_signage.view.ui.auth.LoginActivity">
        <ImageView
                android:src="@drawable/bcg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/loginbg" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.0"
                android:clickable="true" android:focusable="true" android:contentDescription="@string/consulteer"/>
        <TextView
                android:text="@string/email_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" android:fontFamily="@font/roboto_thin"
                android:textSize="18sp"
                android:textStyle="bold" android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/editText4"
                android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/editText4"/>
        <TextView
                android:text="@string/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textAlignment="center" android:textSize="18sp" android:fontFamily="@font/roboto_thin"
                app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/editText4"/>
        <TextView
                android:layout_width="317dp"
                android:layout_height="49dp"
                android:id="@+id/introducer"
                android:text="@string/please_login_to_your_account"
                android:textColor="#212121" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_thin" android:textStyle="bold" android:layout_marginBottom="284dp"
                app:layout_constraintBottom_toTopOf="@+id/loginbutton" android:textAlignment="center"
        />
        <EditText
                android:text="@={viewmodel.email}"
                android:hint="@string/name_surname_consulteer_com"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editText4"
                app:layout_constraintEnd_toEndOf="@+id/introducer"
                app:layout_constraintTop_toBottomOf="@+id/introducer"
                app:layout_constraintStart_toStartOf="@+id/introducer" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="40dp" android:autofillHints=""/>
        <EditText
                android:text="@={viewmodel.password}"
                android:hint="@string/passwordhidden"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:inputType="textPassword"
                android:ems="10"
                app:layout_constraintEnd_toEndOf="@+id/editText4" app:layout_constraintStart_toStartOf="@+id/editText4"
                app:layout_constraintHorizontal_bias="0.0"
                android:autofillHints=""
                android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/editText4"
                android:id="@+id/editText"/>
        <Button
                android:onClick="@{viewmodel::onLoginButtonClick}"
                android:text="@string/login"
                android:layout_width="300dp"
                android:layout_height="51dp"
                android:textSize="25sp"
                android:textColor="#878787"
                android:background="@drawable/custom_button"
                android:id="@+id/loginbutton"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="524dp"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/roboto_thin" android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.494" android:soundEffectsEnabled="false"
        />
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:shadowColor="#C4C4C4C4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarStarted" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/loginbutton" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toEndOf="@+id/loginbutton"
                app:layout_constraintStart_toStartOf="@+id/loginbutton"/>
        <Button
                android:text="@string/g"
                android:textSize="23sp"
                android:textColor="#C4C4C4"
                android:src="@drawable/circular_button"
                android:background="@drawable/circular_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/button" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/loginbutton" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/loginbg" app:layout_constraintVertical_bias="0.214"
                app:layout_constraintEnd_toEndOf="@+id/progressBarStarted"
                app:layout_constraintStart_toStartOf="@+id/progressBarStarted"/>
        <ImageView

                android:background="@drawable/conslogo"
                android:layout_width="364dp"
                android:layout_height="97dp"
                android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="@+id/introducer"
                app:layout_constraintStart_toStartOf="@+id/introducer"
                android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="@+id/loginbg"
                app:layout_constraintHorizontal_bias="0.51" android:contentDescription="@string/consultervector"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>